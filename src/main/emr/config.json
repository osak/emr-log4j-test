[
  {
    "Classification": "spark-log4j",
    "Properties": {
      "log4j.appender.stderr": "org.apache.log4j.ConsoleAppender",
      "log4j.appender.stderr.target": "System.err",
      "log4j.appender.stderr.layout": "org.apache.log4j.PatternLayout",
      "log4j.appender.stderr.layout.conversionPattern": "%d{ISO8601}: %m",

      "log4j.appender.json": "org.apache.log4j.ConsoleAppender",
      "log4j.appender.json.target": "System.out",
      "log4j.appender.json.layout": "net.logstash.log4j.JSONEventLayoutV1",

      "log4j.rootLogger": "INFO, stderr, json"
    }
  }
]